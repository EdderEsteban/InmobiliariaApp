<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvInmobiliaria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.index.MainActivity">


    <ImageView
        android:id="@+id/imLogo"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInmo"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="124dp"
        android:text="Inmobiliaria"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/inicio"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imLogo" />

    <TextView
        android:id="@+id/tvDotAndroid"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="56dp"
        android:text="DotNet Y Android"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/inicio"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInmo"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>